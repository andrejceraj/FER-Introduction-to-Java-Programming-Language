<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1" metadata-complete="false">

	<display-name>webapp2</display-name>
	<description>Web application created as 13th homework</description>


	<servlet>
		<servlet-name>index</servlet-name>
		<servlet-class>hr.fer.zemris.java.hw13.servlets.IndexServlet</servlet-class>
	</servlet>
	<servlet-mapping>
         <servlet-name>index</servlet-name>
         <url-pattern>/index</url-pattern>
    </servlet-mapping>

	<servlet>
		<servlet-name>powers</servlet-name>
		<servlet-class>hr.fer.zemris.java.hw13.servlets.PowersServlet</servlet-class>
	</servlet>
	<servlet-mapping>
         <servlet-name>powers</servlet-name>
         <url-pattern>/powers</url-pattern>
    </servlet-mapping>

	<servlet>
		<servlet-name>reportImage</servlet-name>
		<servlet-class>hr.fer.zemris.java.hw13.servlets.ReportImageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
         <servlet-name>reportImage</servlet-name>
         <url-pattern>/reportImage</url-pattern>
    </servlet-mapping>

	<servlet>
		<servlet-name>setColor</servlet-name>
		<servlet-class>hr.fer.zemris.java.hw13.servlets.SetColorServlet</servlet-class>
	</servlet>
	<servlet-mapping>
         <servlet-name>setColor</servlet-name>
         <url-pattern>/setColor</url-pattern>
    </servlet-mapping>

	<servlet>
		<servlet-name>trigonometric</servlet-name>
		<servlet-class>hr.fer.zemris.java.hw13.servlets.TrigonometricServlet</servlet-class>
	</servlet>
	<servlet-mapping>
         <servlet-name>trigonometric</servlet-name>
         <url-pattern>/trigonometric</url-pattern>
    </servlet-mapping>
    
    <listener>
    	<listener-class>hr.fer.zemris.java.hw13.listeners.AppInfoListener</listener-class>
    </listener>

</web-app>
